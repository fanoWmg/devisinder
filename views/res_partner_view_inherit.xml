<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ir_res_partner_view_form_inherit" model="ir.ui.view">
            <field name="name">ir.mail.server.inherit.view.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//div[@class='o_address_format']" position="attributes">
                        <attribute name="class">o_address_format hidden_class</attribute>
                    </xpath>
                    <xpath expr="//field[@name='company_type']" position="attributes">
                        <attribute name="class">oe_edit_only hidden_class</attribute>
                    </xpath>
                    <xpath expr="//field[@name='name']" position="attributes">
                        <attribute name="class">hidden_class</attribute>
                    </xpath>
                    <xpath expr="//field[@name='parent_id']" position="attributes">
                        <attribute name="class">hidden_class</attribute>
                    </xpath>


                    <div class="oe_button_box" name="button_box" position="before">
                        <div class="tab_">
                            <button class="tablinks" onclick="openCity(event, 'individual')">Individual</button>
                            <button class="tablinks" onclick="openCity(event, 'mirror')">Devinisider Mirror</button>
                        </div>
                    </div>
                    <div class="oe_button_box" name="button_box" position="after">
                        <div id="individual" class="tabcontent active">
                            <div>
                                <field name="name"/>
                                <div class="cadre">
                                    <group>
                                        <div class="o_horizontal_separator">Primary Information</div>
                                        <field name="contact_category"/>
                                        <field name="contact_status"/>
                                        <field name="first_name"
                                               attrs="{'required': [('name', '=', False), ('company_type', '=', 'person')]}"
                                        />
                                        <field name="last_name"
                                               attrs="{'required': [('name', '=', False), ('company_type', '=', 'person')]}"
                                        />
                                        <field name="job_position"/>
                                        <field name="job_category"/>
                                        <field name="job_level"/>
                                        <field name="user_ids" invisible="1"/>
                                        <field name="lang" invisible="1"/>
                                    </group>
                                </div>
                            </div>
                        </div>

                        <div id="mirror" class="tabcontent">

                        </div>
                    </div>
                    <xpath expr="//div[@name='button_box']" position="attributes">
                        <attribute name="class">oe_button_box oe_button_box_custom</attribute>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</odoo>